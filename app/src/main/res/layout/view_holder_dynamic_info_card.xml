<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="avatarUrl"
            type="String" />

        <variable
            name="nickNameText"
            type="String" />

        <variable
            name="titleText"
            type="String" />

        <variable
            name="subTitleText"
            type="String" />

        <variable
            name="timeText"
            type="String" />

        <variable
            name="messageText"
            type="String" />

        <variable
            name="feedUrl"
            type="String" />

        <variable
            name="likeNumText"
            type="String" />

        <variable
            name="descriptionText"
            type="String" />

        <variable
            name="authorClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="videoClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="dynamicInfoClick"
            type="android.view.View.OnClickListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:onClick="@{dynamicInfoClick}"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:onClick="@{authorClick}"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:withCircle="@{avatarUrl}"
            tools:srcCompat="@tools:sample/avatars" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user_name"
            style="@style/main_tv"
            android:layout_marginStart="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{nickNameText}"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            tools:text="@sample/common.json/data/title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_text"
            style="@style/content_tv"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_48"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{subTitleText}"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintStart_toStartOf="@id/tv_user_name" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_head" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_message"
            style="@style/main_tv"
            android:layout_width="@dimen/dp_0"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@{messageText}"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/iv_head"
            app:visibleIfNotNull="@{messageText}"
            tools:text="@sample/common.json/data/description" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/briefCard"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_110"
            android:background="@drawable/shape_brief_corner"
            android:onClick="@{videoClick}"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/tv_message">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_cover"
                android:layout_width="@dimen/dp_150"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:withCorner="@{feedUrl}"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="13dp"
                tools:srcCompat="@tools:sample/avatars" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title"
                style="@style/main_tv"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{titleText}"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/iv_cover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@sample/common.json/data/longTitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_description"
                style="@style/content_tv"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{descriptionText}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_cover"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                tools:text="@sample/common.json/data/longDescription" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_like_num"
            style="@style/main_tv"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{likeNumText}"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@+id/briefCard"
            tools:text="@sample/common.json/data/number" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_time"
            style="@style/content_tv"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{timeText}"
            app:layout_constraintStart_toEndOf="@id/tv_like_num"
            app:layout_constraintTop_toBottomOf="@+id/briefCard"
            app:visibleIfNotNull="@{messageText}"
            tools:text="@sample/common.json/data/date" />

        <View
            style="@style/view_line"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintTop_toBottomOf="@id/tv_time" />

    </android.support.constraint.ConstraintLayout>
</layout>
