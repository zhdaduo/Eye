<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.App.Theme.Gallery" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="App.Theme.Gallery" parent="Base.App.Theme.Gallery"/>

    <style name="BaseTextViewStyle" parent="android:Widget.TextView" />

    <style name="MyTextViewStyle" parent="BaseTextViewStyle">
        <item name="android:hyphenationFrequency" tools:targetApi="m">none</item>
    </style>

    <style name="App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="header_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="content_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="view_line">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="btn_focus">
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/tv_title</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_focus_black_btn</item>
    </style>

    <style name="btn_focus_white">
        <item name="android:layout_width">@dimen/dp_44</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/shape_focus_white_btn</item>
    </style>

    <style name="AndroidTagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_isRoundMode">false</item>
        <item name="atg_inputHint">@string/add_tag</item>
        <item name="atg_borderColor">#49C120</item>
        <item name="atg_textColor">#49C120</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_inputTextSize">16sp</item>
        <item name="atg_inputTagBackgroundColor">#a47a7a</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">4dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">3dp</item>
    </style>

    <style name="TagGroup.Light_Blue" parent="AndroidTagGroup">
        <item name="atg_isRoundMode">true</item>
        <item name="atg_borderColor">#00000000</item>
        <item name="atg_textColor">@color/tag_text_color</item>
        <item name="atg_backgroundColor">#214686D6</item>
        <item name="atg_pressedBackgroundColor">#214686D6</item>
    </style>

    <style name="TagGroup.Light_Gray" parent="AndroidTagGroup">
        <item name="atg_isRoundMode">true</item>
        <item name="atg_borderColor">#00000000</item>
        <item name="atg_textColor">@color/colorWhite</item>
        <item name="atg_backgroundColor">@color/tv_hint</item>
        <item name="atg_pressedBackgroundColor">@color/tv_hint</item>
        <item name="atg_xRadius">@dimen/dp_4</item>
        <item name="atg_yRadius">@dimen/dp_4</item>
    </style>

    <style name="view_line_gray">
        <item name="android:layout_height">0.1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_line_color</item>
        <item name="atg_xRadius">@dimen/dp_4</item>
        <item name="atg_yRadius">@dimen/dp_4</item>
    </style>


    <!-- 首页底部栏 tab样式 -->
    <style name="bottomTab">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tv_hint</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
